{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
  
    "include": [ //The files to include in compilation
        "./src/"
    ],

    "compilerOptions": {
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
      "outDir": "dist",

      "types": ["node"], //allows "require(module)"
  
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }

    
}